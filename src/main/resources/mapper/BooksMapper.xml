<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qiaojingjing.bookDemo.Mapper.BooksMapper">
    <select id="queryAll" resultType="com.qiaojingjing.bookDemo.VO.BookVO">
        select id,name,author,isbn,press from books
        <where>
            <if test="name!=null and name!=''">name like concat ('%',{name},'%')</if>
            <if test="author!=null">and author=#{author}</if>
            <if test="isbn!=null">and isbn=#{isbn}</if>
            <if test="press!=null">and press=#{press}</if>
        </where>
        order by have_borrowed desc
    </select>
</mapper>